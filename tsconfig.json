{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "removeComments": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
